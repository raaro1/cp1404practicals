BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: user_input
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 25
                on_press: app.handle_increment_change(+1)

            Button:
                text: 'Down'
                font_size: 25
                on_press: app.handle_increment_change(-1)

    Button:
        text: 'Convert miles to km'
        font_size: 25
        on_press: app.handle_convert_input(user_input.text)

    Label:
        id: output_label
        text: app.output_text
        font_size: 48
        color: (1, 1, 0, 1)